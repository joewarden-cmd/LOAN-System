@model DinoLoan.Entity.Book

<h1>New Book</h1>

<form action="Create" method="post">
    <div class="row">
        <input class="mb-2 form-control" type="text" name="Name" placeholder="Name">
         <span asp-validation-for="Name" class="text-danger" ></span>
        <input class="mb-2 form-control" type="text" name="Author" placeholder="Author">
         <span asp-validation-for="Author" class="text-danger" ></span>
    </div>

    <div >
        <input class="btn btn-success" type="submit" value="Add">
    </div>
</form>